<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chandrassekhar.nameandage2.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit2"
        android:layout_alignLeft="@+id/text2"
        android:layout_alignStart="@+id/text2"
        android:text="@string/name"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="39dp"
        android:layout_alignBottom="@+id/edit2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="18dp" />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginStart="49dp" />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/edit1"
        android:layout_alignLeft="@+id/edit1"
        android:layout_alignStart="@+id/edit1" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:text="EMAIL:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="39dp"/>

    <EditText
        android:id="@+id/edit3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/edit2"
        android:layout_alignLeft="@+id/edit1"
        android:layout_alignStart="@+id/edit1" />


    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:text="BIO:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="39dp"/>

    <EditText
        android:id="@+id/edit4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit3"
        android:layout_alignLeft="@+id/edit1"
        android:layout_alignStart="@+id/edit1"
        android:layout_marginTop="39dp"
        android:maxLines="4"
        android:lines="4"/>




    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        />

</RelativeLayout>
